@model OrderProcessingApp.Models.Order

@{
    ViewData["Title"] = "Enter Order Details";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="ProcessOrder">
    <div class="form-group">
        <label for="Amount">Order Amount</label>
        <input type="number" class="form-control" id="Amount" name="Amount" required />
    </div>

    <div class="form-group">
        <label for="CustomerType">Customer Type</label>
        <select class="form-control" id="CustomerType" name="CustomerType" required>
            <option value="New">New</option>
            <option value="Loyal">Loyal</option>
        </select>
    </div>

    <button type="submit" style="margin-top: 20px;" class="btn btn-primary">Submit</button>
</form>
<style>
    .form-control {
        width : 20%;
        margin-bottom: 20px;
    }
</style>